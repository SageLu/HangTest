<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lizi.fast_fragment">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".core.CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.MaterialDesign">
        <activity
            android:name=".sample.WelcomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".sample.HomeActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".sample.SampleListActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".sample.SampleListActivity1"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>