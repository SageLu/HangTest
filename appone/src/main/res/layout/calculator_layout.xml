<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/autoLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_finish_calculator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="25px"
            android:layout_weight="0.2" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.6"
            android:gravity="center"
            android:text="计算器"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_beizhu_calculator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_total_money_calculator"
        android:layout_alignStart="@+id/tv_total_money_calculator"
        android:layout_below="@+id/autoLinearLayout"
        android:layout_marginTop="7dp" />

    <TextView
        android:id="@+id/tv_total_money_calculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/view"
        android:layout_alignLeft="@+id/view"
        android:layout_alignRight="@+id/view"
        android:layout_alignStart="@+id/view"
        android:layout_below="@+id/textView7"
        android:gravity="end|center_vertical"
        android:padding="30px"
        android:singleLine="true"
        android:text="0"
        android:textSize="32sp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_total_money_calculator"
        android:layout_marginEnd="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginStart="35dp" />

    <LinearLayout
        android:id="@+id/autoLinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/view"
        android:layout_alignLeft="@+id/view"
        android:layout_alignRight="@+id/view"
        android:layout_alignStart="@+id/view"
        android:layout_below="@+id/view"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="明细" />

        <TextView
            android:id="@+id/tv_detail_calculator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:ellipsize="start"
            android:gravity="end"
            android:padding="20px"
            android:singleLine="true"
            android:text="0"
            android:textSize="24sp" />

    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/autoLinearLayout2" />

    <LinearLayout
        android:id="@+id/cal_top_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view3"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="186px"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnNum1"
            android:layout_width="186px"
            android:layout_height="186px"
            android:text="1"
            android:textSize="35sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="186px"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnNum2"
            android:layout_width="186px"
            android:layout_height="186px"
            android:text="2"
            android:textSize="35sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="186px"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnNum3"
            android:layout_width="186px"
            android:layout_height="186px"
            android:text="3"
            android:textSize="35sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="186px"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cal_top2_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cal_top_ll"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="186px"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnNum4"
            android:layout_width="186px"
            android:layout_height="186px"
            android:text="4"
            android:textSize="35sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="186px"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnNum5"
            android:layout_width="186px"
            android:layout_height="186px"
            android:text="5"
            android:textSize="35sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="186px"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnNum6"
            android:layout_width="186px"
            android:layout_height="186px"
            android:text="6"
            android:textSize="35sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="186px"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cal_top3_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cal_top2_ll"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="186px"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnNum7"
            android:layout_width="186px"
            android:layout_height="186px"
            android:text="7"
            android:textSize="35sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="186px"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnNum8"
            android:layout_width="186px"
            android:layout_height="186px"
            android:text="8"
            android:textSize="35sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="186px"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnNum9"
            android:layout_width="186px"
            android:layout_height="186px"
            android:text="9"
            android:textSize="35sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="186px"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cal_top4_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cal_top3_ll"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="186px"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnNumpoint"
            android:layout_width="186px"
            android:layout_height="186px"
            android:text="."
            android:textSize="35sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="186px"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnNum0"
            android:layout_width="186px"
            android:layout_height="186px"
            android:text="0"
            android:textSize="35sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="186px"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnNumclear"
            android:layout_width="186px"
            android:layout_height="186px"
            android:text="清空"
            android:textSize="35sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="186px"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cal_top5_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cal_top4_ll"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="186px"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnNumadd"
            android:layout_width="186px"
            android:layout_height="186px"
            android:text="+"
            android:textSize="35sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="186px"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnNumequal"
            android:layout_width="186px"
            android:layout_height="186px"
            android:text="="
            android:textSize="35sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="186px"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnNumdeleteOne"
            android:layout_width="186px"
            android:layout_height="186px"
            android:text="delete"
            android:textSize="35sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="186px"
            android:layout_weight="1" />
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/cal_top5_ll" />

    <LinearLayout
        android:id="@+id/cal_top6_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cal_top5_ll"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <TextView
            android:id="@+id/tv_cal_saoma_pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_cal_xianjin_shoukuan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_cal_huiyuan_pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

    </LinearLayout>
</RelativeLayout>